        <html><![CDATA[<html>
<head>
    <title>Upcoming Events Dashboard</title>
    <style>
        body { font-family: Arial, sans-serif; }
        h2 { margin: 20px; color: #333; }
        table { width: 90%; border-collapse: collapse; margin: 20px; }
        th, td { border: 1px solid #ccc; padding: 8px; text-align: left; }
        th { background: #f5f5f5; }
        tr:nth-child(even) { background: #fafafa; }
    </style>
    <script type="text/javascript">
        function fetchUpcomingEvents() {
            var ga = new GlideAjax('GetUpcomingEvents');
            ga.addParam('sysparm_name', 'getEvents');
            ga.getXMLAnswer(function(response) {
                var events = JSON.parse(response);
                populateEventsTable(events);
            });
        }

        function populateEventsTable(events) {
            var tbody = document.getElementById('events-body');
            tbody.innerHTML = '';
            if (events.length === 0) {
                var row = tbody.insertRow();
                var cell = row.insertCell(0);
                cell.colSpan = 4;
                cell.textContent = 'No upcoming events found.';
                cell.style.textAlign = 'center';
                return;
            }
            events.forEach(function(evt) {
                var row = tbody.insertRow();
                var cellName = row.insertCell(0);
                cellName.textContent = evt.eventName;
                var cellDate = row.insertCell(1);
                var date = new Date(evt.eventDate);
                cellDate.textContent = date.toLocaleString();
                var cellLocation = row.insertCell(2);
                cellLocation.textContent = evt.location;
                var cellStatus = row.insertCell(3);
                cellStatus.textContent = evt.status;
            });
        }

        // Fetch events on page load
        window.onload = fetchUpcomingEvents;

        // OPTIONAL: Refresh every 60 seconds for real-time updates
        // setInterval(fetchUpcomingEvents, 60000);
    </script>
</head>
<body>
    <h2>Upcoming Events Dashboard</h2>
    <table>
        <thead>
            <tr>
                <th>Event Name</th>
                <th>Event Date</th>
                <th>Location</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody id="events-body">
            <tr>
                <td colspan="4" style="text-align:center;">Loading events...</td>
            </tr>
        </tbody>
    </table>
</body>
</html>
]]></html>
