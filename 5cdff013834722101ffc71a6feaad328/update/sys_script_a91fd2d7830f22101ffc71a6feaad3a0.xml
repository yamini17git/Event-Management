        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	// Add your code here
	 // Get the budget Sys ID from current expense record
    var budgetSysId = current.x_budget_id;

    if (!budgetSysId) {
        return; // No budget associated
    }

    // Calculate total amount spent for the budget by summing all related expenses
    var expenseGR = new GlideAggregate('x_1539926_event_ma_expense');
    expenseGR.addQuery('number', budgetSysId);
    expenseGR.addAggregate('SUM', 'x_amount');
    expenseGR.query();

    var totalSpent = 0;
    if (expenseGR.next()) {
        totalSpent = expenseGR.getAggregate('SUM', 'x_amount') || 0;
    }

    // Update the budget record with new total spent and amount left
    var budgetGR = new GlideRecord('x_1539926_event_ma_budget');
    if (budgetGR.get(budgetSysId)) {
        budgetGR.x_amount_spent = totalSpent;
        budgetGR.x_amount_left = budgetGR.x_total_amount - totalSpent;
        budgetGR.update();
    }



})(current, previous);]]></script>
