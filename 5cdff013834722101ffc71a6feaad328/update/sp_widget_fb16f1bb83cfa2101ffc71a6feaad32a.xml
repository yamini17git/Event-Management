        <script><![CDATA[(function() {
  data.success = '';
  data.error = '';

  if (input && input.attendee) {
    var a = input.attendee;
    if (a.x_event_id && a.x_first_name && a.x_last_name && a.x_email && a.x_contact_number) {
      var gr = new GlideRecord('x_1539926_event_ma_attendee');
      gr.initialize();
      gr.setValue('x_event_id', a.x_event_id);
      gr.setValue('x_first_name', a.x_first_name);
      gr.setValue('x_last_name', a.x_last_name);
      gr.setValue('x_email', a.x_email);
      gr.setValue('contact_number', a.x_contact_number);
      gr.insert();
      data.success = 'Attendee registered successfully.';
    } else {
      data.error = 'Please fill in all fields.';
    }
  }
})();
]]></script>
