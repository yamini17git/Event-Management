        <template><![CDATA[<h5 class="mb-3 text-primary">
  <i class="fa fa-comments"></i> Submitted Feedback
</h5>

<div ng-if="c.success" class="alert alert-success py-2 px-3 mb-2">{{ c.success }}</div>
<div ng-if="c.error" class="alert alert-danger py-2 px-3 mb-2">{{ c.error }}</div>

<div ng-if="data.feedbacks.length === 0" class="alert alert-info p-2">
  No feedback submitted yet.
</div>

<div ng-repeat="fb in data.feedbacks" class="card mb-2 shadow-sm">
  <div class="card-body py-2 px-3">
    <div class="row">
      <div class="col-md-6">
        <strong>ID:</strong> {{ fb.number }}<br>
        <strong>Rating:</strong> {{ fb.rating }} ‚≠ê<br>
        <strong>Event:</strong> {{ fb.event }}
      </div>
      <div class="col-md-6">
        <strong>Attendee:</strong> {{ fb.attendee }}<br>
        <strong>Comment:</strong>
        <span class="d-inline-block text-truncate" style="max-width: 200px;" title="{{ fb.comments }}">
          {{ fb.comments }}
        </span>
      </div>
    </div>
    <div class="mt-3 text-end">
      <button class="btn btn-outline-primary btn-sm me-2" ng-click="c.view(fb.sys_id)">
        <i class="fa fa-eye"></i> View
      </button>
      <button class="btn btn-outline-danger btn-sm" ng-click="c.delete(fb.sys_id)">
        <i class="fa fa-trash"></i> Delete
      </button>
    </div>
  </div>
</div>
]]></template>
